@model NET_Mom3.Models.CD

@{
    ViewData["Title"] = "Radera";
}

<h1>Radera</h1>

<h3>Är du säker på att du vill radera denna?</h3>
<div>
    <h4>CD</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Namn
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Utgivningsdatum
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PublishedDate)
        </dd>
        <dt class = "col-sm-2">
            Antal låtar
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tracks)
        </dd>
        <dt class = "col-sm-2">
            Total låtlängd
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Length)
        </dd>
        <dt class = "col-sm-2">
            Artist
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Artist.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Radera" class="btn btn-danger" /> |
        <a asp-action="Index">Tillbaka till listan</a>
    </form>
</div>
